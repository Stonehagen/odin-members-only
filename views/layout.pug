doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .header 
      h1 CLUBHOUSE
    .menu 
      ul.listMenu
        if user 
          li.listButton
            a(href='/log-out') Log Out
          if !user.memberstatus
            li.listButton
              a(href='/invite') Clubmember
          else
            if !user.adminstatus
              li.listButton
                a(href='/admin') Admin
        else
          li.listButton
            a(href='/sign-up') Sign Up
          li.listButton
            a(href='/log-in') Log In
    .main
      block content
